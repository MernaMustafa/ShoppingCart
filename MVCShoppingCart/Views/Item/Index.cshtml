@model IEnumerable<MVCShoppingCart.Models.Item>

@{
    ViewData["Title"] = "Items List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Products</h1>
<hr />

<p>
    <a class="btn btn-primary" asp-controller="Item" asp-action="Create">Add New Item</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                $ @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="text-right">
                <a class="btn btn-info" asp-controller="Item" asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>
                <a class="btn btn-danger" asp-controller="Item" asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
