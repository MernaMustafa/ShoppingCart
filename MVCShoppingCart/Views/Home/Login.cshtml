@model MVCShoppingCart.Models.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Login</h2>
    <form asp-action="Login" asp-controller="Home" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.UserName" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Login</button>
                    <br />
                    <br />
                    <a asp-action="Register" asp-controller="Home">Don't have an account? Click to Register</a>

                </div>
            </div>
        </div>
    </form>
    <div>
        <p> for demo purposes you can login with these credentials:</p>
        <p>Username: <b>admin</b>, Password: <b>admin</b></p>
